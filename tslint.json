{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "indent": [true, "spaces", 4],
        "interface-name": [true, "never-prefix"],
        "jsx-no-multiline-js": [false],
        "jsx-wrap-multiline": true,
        "no-var-requires": false, // needed for CSS Modules; const styles = require('./style.css')
        "ordered-imports": [
          true,
          {
            "grouped-imports": true
          }
        ],
        "trailing-comma": [
          true,
          {
            "multiline": {
              "objects": "always",
              "arrays": "always",
              "functions": "never"
            },
            "singleline": "never",
            "esSpecCompliant": true
          }
        ],
      "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-rest-spread",
        "check-type",
        "check-typecast",
        "check-preblock"
      ]
    }
}